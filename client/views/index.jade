doctype html
html(lang='en', ng-app='jscalcApp', ng-controller='JscalcCtrl')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no')
    title JSCalc
    link(rel='stylesheet', href='/bower_components/angular-material/angular-material.css')
    // See https://github.com/ajaxorg/ace-builds/issues/45.
    script(src='/bower_components/ace-builds/src-min-noconflict/ace.js')
    != js('index')
    != css('index')
  body(layout='horizontal')
    material-sidenav.material-sidenav-left.material-whiteframe-z3(component-id='left', layout='vertical')
      material-content#side-nav(flex='flex')
        a#logo(href='#!', ng-class="{active: isCurrentLocation('/')}", ink-ripple='ink-ripple') JSCalc
        a(href='#!/edit/{{newCalcId}}', ng-class="{active: isCurrentLocation('/edit/' + newCalcId)}", ink-ripple='ink-ripple') New calculator
    material-content(role='main', layout='vertical', layout-fill='layout-fill', scroll-y='scroll-y', ng-view='ng-view')
