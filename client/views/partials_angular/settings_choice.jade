.title Choice Input Settings
.content
  div(ng-include="'/partials/settings_common'")
  h3 Choices
  .sortable-container(ui-sortable, ng-model="settingsModel.metaInput.choices")
    .choice.sortable-item(ng-repeat='choice in settingsModel.metaInput.choices track by choice.id')
      .label-row
        .label Option {{$index}}
        button.button-delete-choice.menu-icon(aria-label='Delete', ng-click="deleteChoice(settingsModel.metaInput.choices, choice.id)")
          .md-icon-container
            .inline-icon.delete-icon.black-icon
      md-text-float(label='Label', ng-model='choice.label')
      md-text-float(label='Value', ng-model='choice.value')
  .button-row
    md-button.md-primary(ng-click="addChoice(settingsModel.metaInput)") Add choice
