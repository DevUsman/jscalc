md-toolbar#toolbar-source.md-tall
  .md-toolbar-tools
    button.menu-icon(ng-show='!sidenavsLockedOpen', aria-label='Toggle Menu', ng-click='toggleNav()')
      md-icon(icon='/img/icons/ic_menu_24px.svg')
    span#app-title Abc, {{calcId}}
  md-tabs(selected='selectedTabIndex')
    md-tab(label='IO')
    md-tab(label='SCRIPT')
md-content#tab-content(flex, layout='vertical')
  div(ng-show='selectedTabIndex == 0', flex, layout='vertical')
    div(ng-include="'/partials/calc'", flex, layout='vertical')
  div(ng-show='selectedTabIndex == 1', flex, layout='vertical')
    #script-container(flex, layout='horizontal')
      #script(flex, flex-sm='60')
        div(ui-ace='{onLoad: onAceLoad}')
      #cheat-sheet(flex)
        span cheat sheet
